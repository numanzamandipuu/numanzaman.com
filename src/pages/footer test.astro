---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Starter Page">

  <main class="main">

    <!-- Page Title -->
    <div class="page-title">
      <div class="breadcrumbs">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item">
              <a href="/"><i class="bi bi-house"></i> Home</a>
            </li>
            <li class="breadcrumb-item active current">
              Starter Page
            </li>
          </ol>
        </nav>
      </div>

      <div class="title-wrapper">
        <h1>Starter Page</h1>
        <p>
          Lorem ipsum dolor sit amet, consectetur adipiscing elit.
          Ut elit tellus, luctus nec ullamcorper mattis, pulvinar dapibus leo.
        </p>
      </div>
    </div>
    <!-- End Page Title -->

    <!-- Starter Section -->
    <section id="starter-section" class="starter-section section light-background">

      <!-- Section Title -->
      <div class="container section-title">
        <h2>Starter Section</h2>
        <div class="title-shape">
          <svg viewBox="0 0 200 20" xmlns="http://www.w3.org/2000/svg">
            <path d="M 0,10 C 40,0 60,20 100,10 C 140,0 160,20 200,10"
              fill="none"
              stroke="currentColor"
              stroke-width="2">
            </path>
          </svg>
        </div>
        <p>
          Quis autem vel eum iure reprehenderit qui in ea voluptate velit esse
          quam nihil molestiae consequatur vel illum qui dolorem
        </p>
      </div>
      <!-- End Section Title -->

      <div class="container">
        <p>
          Use this page as a starter for your own custom pages.
        </p>
      </div>

    </section>
    <!-- /Starter Section -->

  </main>

</BaseLayout>
